x = float(input("Введите координату по горизонтали: "))
y = float(input("Введите координату по вертикали: "))

while x > 0.8 or y > 0.8:
    print("Точки с такой координатой не существует!")
    x = float(input("Введите координату по горизонтали ещё раз: "))
    y = float(input("Введите координату по вертикали ещё раз: "))


xSquare = int(x * 10)
ySquare = int(y * 10)

print("Координаты робота: ", xSquare, ySquare)

